@model Business.Library.Profile

@{
    Layout = null;
}

<style type="text/css">
    .profile {
        background-color: darkslategray;
        color: white;
        border: 1px solid gold;
        min-width: 240px;
        max-width: 350px;
        height: 100px;
        overflow: hidden;
        border-radius: 10px 10px 10px 10px;
    }

    .profile-info {
        overflow: hidden;
        width: 100%;
        height: 100px;
        padding: 5px 10px 5px 0;
    }

    .pad-left {
        position: relative;
        width: 100%;
        top: 0;
        padding-left: 100px;
        display: inline-block;
    }

    .text-overflow {
        text-overflow: ellipsis;
        white-space: nowrap;
        display: block;
        overflow: hidden;
        width: 100%;
    }
</style>

<div style="display: table; margin: 0 auto;">
    <div class="profile">
        <div class="pad-left">
            <div class="@Model.Class">
            </div>
            <div class="profile-info text-right">
                <h3 class="text-right text-overflow">@Model.Username</h3>
                @if (@Model.HasMic)
                {<span style="display: inline-block;" class="glyphicon glyphicon-headphones text-left"></span>}
                <h4 class="light-level text-right">@Model.LightLevel</h4>
            </div>
        </div>
    </div>
</div>
