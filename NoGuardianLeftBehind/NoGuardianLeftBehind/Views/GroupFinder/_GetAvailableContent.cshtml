@model IEnumerable<Business.Library.Content>

@{
    Layout = null;
}

<h3 class="text-center">Select What You Want to Find a Group For!</h3>
<div class="col-lg-12">
    @foreach (var item in @Model)
    {
        <div class="col-lg-4" onclick="location.href='@Url.Action("Finder", "GroupFinder", new { Content = @item.Name, FireteamSize = @item.ContentType.Fireteam_Size, MinimumLightLevel = @item.LightLevel })'">
            @Html.Action("_Content", "GroupFinder", new { Name = @item.Name, Description = "Light Level: " + @item.LightLevel.ToString() + "<br />"+ "Fireteam Size: " + @item.ContentType.Fireteam_Size + "<br />" + "Matched Players: " + @item.Frequency.ToString(), Class = @ViewBag.ContentType })
        </div>
    }
</div>
