@model NoGuardianLeftBehind.Models.ContentModel

@{
    Layout = null;
}

<style type="text/css">
    .content {
        margin-top: 10px;
        border-radius: 10px;
        min-width: 240px;
        max-width: 450px;
        min-height: 240px;
        background-color: darkslategray;
        color: white;
        border: 1px solid gold;
    }

     .content:hover, .content:focus, content:active{
        background-color: slategray;
        color: gold;
        border: 1px solid gold;
    }

    .pad-left-content {
        position: relative;
        width: 100%;
        height: 240px;
        top: 0;
        padding-left: 125px;
        display: inline-block;
    }

        .content-info {
        width: 100%;
        height: 240px;
        padding: 5px 5px 5px 5px;
    }

        .visible-xs.visible-sm{
            font-size: 12px;
        }

        .visible-md,
        .visible-lg{
            font-size: 16px;
        }
</style>

<div style="display: table; margin: 0 auto;">
    <div class="content">
        <div class="pad-left-content">
            <div class="@Model.CLASS.SingleClassify() @Model.NAME.Classify()" style="margin-left: 5px;">
            </div>
            <div class="content-info">
                <h3 class="text-center" style="padding-right: 5px;">@Model.NAME</h3>
                <p class="text-left visible-md visible-lg hidden-sm hidden-xs" style="overflow: auto; min-height: 100px; max-height: 150px;">@Model.DESCRIPTION</p>
                <p class="text-left hidden-md hidden-lg visible-sm visible-xs" style="overflow: auto; min-height: 100px; max-height: 150px;">@Model.DESCRIPTION</p>
            </div>
        </div>
    </div>
</div>
