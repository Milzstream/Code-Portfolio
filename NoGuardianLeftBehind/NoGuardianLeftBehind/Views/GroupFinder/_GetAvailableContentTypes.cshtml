@model IEnumerable<Business.Library.ContentType>

@{
    Layout = null;
}

<h3 class="text-center">Select a Content Category to Get Started!</h3>
<div class="col-lg-12">
    @foreach (var item in @Model)
    {
        <div class="col-lg-4" onclick="location.href='@Url.Action("ContentSelection", "GroupFinder", new { ContentType = @item.Name })'">
            @Html.Action("_Content", "GroupFinder", new { Name = @item.Name, Description = @item.Description, Class = @item.Name.ToLower() })
        </div>
    }
</div>

