@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    @Scripts.Render("~/bundles/formvalidation")
    @Scripts.Render("~/bundles/contact")
}

@section feature{
    <!-- Breadcrumb Section Start -->
    <div class="breadcum">
        <div class="container">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")">
                        <i class="livicon icon3 icon4" data-name="home" data-size="18" data-loop="true" data-c="#3d3d3d" data-hc="#3d3d3d"></i>Home
                    </a>
                </li>
                <li class="hidden-xs">
                    <i class="livicon icon3" data-name="angle-double-right" data-size="18" data-loop="true" data-c="#01bc8c" data-hc="#01bc8c"></i>
                    <a href="@Url.Action("Contact", "About")">Contact</a>
                </li>
            </ol>
            <div class="pull-right">
                <i class="livicon icon3" data-name="cellphone" data-size="20" data-loop="true" data-c="#3d3d3d" data-hc="#3d3d3d"></i> Contact
            </div>
        </div>
    </div>
    <!-- //Breadcrumb Section End -->
}

<div class="container">
    <!-- What we are section Start -->
    <div class="row">
        <!-- What we are Start -->
        <div class="col-md-12 col-sm-12">
            <br />
            <img src="@Url.Content("~/Content/Images/contact-page.jpg")" class="img-responsive">
            <br />
            <p>
                We want to hear how we are doing. Are we missing content? Have we not considered the importance of light level differences?
                We want to make sure we continue to improve this site, based on community feedback! Please also use this contact form as a way
                to report an issue, or ask a question.
            </p>
        </div>
    </div>
    <!-- //What we are End -->
    <div class="row">
        <div class="col-lg-12">
            @using (Html.BeginForm("Contact", "About", FormMethod.Post, new { @role = "form", @id = "contactform", @class = "", @data_submit = @Url.Action("SendContact", "About")}))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label class="control-label">Name</label>
                    <input type="text" id="nameTB" class="form-control" name="name" placeholder="Ex. Elliott/Shadeslayor" />
                </div>
                <div class="form-group">
                    <label class="control-label">Email</label>
                    <input type="email" id="emailTB" class="form-control" name="email" placeholder="Ex. Shadeslayor@email.com" />
                </div>
                <div class="form-group">
                    <label class="control-label">Message</label>
                    <textarea class="form-control" id="bodyTB" name="body" placeholder="Ex. The pages aren't scrolling correctly on my iPhone"></textarea>
                </div>

                <div class="form-group">
                    <label class="control-label" id="captchaOperation"></label>
                    <input type="text" class="form-control" name="captcha" placeholder="Prove you are not a robot" />
                </div>

                <button id="sendBTN" type="submit" class="btn btn-primary push-right" name="Send">
                    Send
                </button>
            }
        </div>
    </div>
</div>
